<div class="row">
  <div class="col-md-4 col-sm-6">
    <%= render :partial => "shared/categories", locals: {categories: @categories, category_active: @category} %>
  </div>

  <div class="col-md-8 col-sm-6" id="stage">
    <div class="row">
      <div class="page-header text-center">
        <h2><%= @category.name %></h2>
        <table class="table table-striped table-hover">
          <thead></thead>
          <tbody>
            <% @products.each do |product| %>
            <tr>
              <td>
                <a href="/frontends/<%= product.id %>/product_detail" class="thumbnail">
                  <%= image_tag product.photo.url(:thumb), alt: product.name%>
                </a>
              </td>
              <td>
                <div class="title"><%= product.name %></div>
                <div class="price">Â¥<%= product.price %></div>
                <div class="product-group-button">
                  <a href="/frontends/<%= product.id %>/product_detail" class="btn btn-info">Detail</a>
                  <a href="/frontends/<%= product.id %>/add_to_cart" class="btn btn-success add-to-cart">Buy</a>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>