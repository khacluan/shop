<div class="row order">
  <div class="col-md-8">
    <div class="thank-you">THANK YOU</div>
    <div class="order-number"><%= @order.order_code %></div>
    <div class="order-mesg">Your order  has been confirmed and you will receive an order confirmation email shortly.</div>
    <div class="btn btn-info">PRINT RECEIPT</div>
  </div>
  <div class="col-md-4">
    <div class="logo">
      <%= image_tag '/assets/logo.png', size: '335x53' %>
    </div>
    <div class="order-info">
      <h3>Order Information</h3>

    </div>
  </div>
</div>

<div class="row">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>No</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @order.cart.line_items.each_with_index do |item, index|%>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= item.product.try(:name)%></td>
        <td><%= item.product.try(:price)%></td>
        <td><%= item.qty%></td>
        <td><%= item.amount%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-1 col-md-offset-5">
    <a href="/frontends/finish_shopping?order_id=<%= @order.id %>" class="btn btn-warning">Complete</a>
  </div>
</div>